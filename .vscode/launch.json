{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Debug Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5070",
            "webRoot": "${workspaceFolder}/src/Client/build",
            "sourceMaps": true,
        },
        {
            "name": "Launch Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Server",
            "program": "${workspaceFolder}/src/Server/bin/Debug/net8.0/Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Server",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "justMyCode": true,
            "logging": {
                "moduleLoad": false
            }
            // "symbolOptions": {
            //     "searchMicrosoftSymbolServer": true,
            //     "searchNuGetOrgSymbolServer": true
            // },
            // "suppressJITOptimizations": true,
            // "env": {
            //     "COMPlus_ZapDisable": "1",
            //     "COMPlus_ReadyToRun": "0"
            // }
        },
        {
            "name": "Debug Automation",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Automation",
            "program": "${workspaceFolder}/test/Automation/bin/Debug/net8.0/Automation.dll",
            "args": [],
            "justMyCode" : false,
            "logging": {
                "moduleLoad": false
            },
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "symbolOptions": {
                
                // "searchMicrosoftSymbolServer": true,
                // "searchNuGetOrgSymbolServer": true,
                "cachePath": "/symcache",
                "moduleFilter": {
                    "mode": "loadAllButExcluded",
                }
            },
            "sourceLinkOptions": {
                "https://raw.githubusercontent.com/*": { "enabled": true },
                "*": { "enabled": true }
            },
        
            "suppressJITOptimizations": true,
            "env": {
                "COMPlus_ZapDisable": "1",
                "COMPlus_ReadyToRun": "0"
            }
        },
        {
            "name": "Debug CQRS Test",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build CQRSTest",
            "program": "${workspaceFolder}/test/CQRS/bin/Debug/net8.0/CQRS.dll",
            "args": [],
            "justMyCode" : true,
            "logging": {
                "moduleLoad": false
            },
            "stopAtEntry": false,
            "console": "internalConsole",
        },
    ]
    
}